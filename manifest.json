{
  "manifest_version" : 2,
  "name" : "Script Injector",
  "version" : "1.0.0",
  "permissions" : [
    "storage",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "browser_action" : {
    "default_popup" : "popup.html"
  },
  "background" : {
    "scripts" : [
      "js/background.js"
    ]
  },
  "content_scripts" : [
    {
      "matches" : ["*://*/*"],
      "js" : ["js/content_script.js"]
    }
  ]
}